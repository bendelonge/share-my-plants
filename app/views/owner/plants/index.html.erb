<div class="container">
  <div class="row">
    <% @plants.each do |plant| %>
    <div class="col-xs-12 col-sm-3">
      <div class="card" style="background-image: url('<%= cl_image_path plant.main_picture, height: 300, crop: :fill unless plant.main_picture.nil? %>')" >
        <div class="card-description">
          <h2><%= plant.species %></h2>
          <p><%= plant.city_location %></p>
<%= link_to '', method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash"></i>
                <% end %>
        </div>
        <%= link_to '', plant_path(plant), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div >
  <%= link_to "Add your plant !!", new_owner_plant_path, class: 'btn btn-warning'%>
</div>


